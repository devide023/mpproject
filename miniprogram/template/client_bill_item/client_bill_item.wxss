.client-bill-item {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  width: 100%;
  padding-right: 13px;
  position: relative;
}

.client-bill-item:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: relative;
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.client-item-icon {
  margin: 0rpx 20rpx 0rpx 0rpx;
}
