<view class='page'>
  <view class='page__bd'>
    <form bindsubmit="formSubmit">
      <view class='weui-cells'>
        <view class='weui-cell weui-cell_input'>
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="client_name" placeholder="请输入姓名" value='{{client_name}}' />
          </view>
        </view>

        <view class='weui-cell weui-cell_select'>
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">证件类型</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="cer_type_change" range='{{cer_types}}' value='{{cer_types_index}}'>
              <view class="weui-select" name="client_cer_type">{{cer_types[cer_types_index]}}</view>
            </picker>
          </view>
        </view>

        <view class='weui-cell weui-cell_input'>
          <view class='weui-cell__hd'>
            <view class="weui-label">证件编号</view>
          </view>
          <view class='weui-cell__bd'>
            <input class="weui-input" name="client_cer_number" placeholder="请输入编号" value='{{client_cer_number}}' />
          </view>
        </view>

        <view class='weui-cell weui-cell_select'>
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">性别</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="sex_change" range='{{sex}}' value='{{sexindex}}'>
              <view class="weui-select" name="client_sex">{{sex[sexindex]}}</view>
            </picker>
          </view>
        </view>

        <view class='weui-cell weui-cell_input'>
          <view class="weui-cell__hd">
            <view class="weui-label">联系电话</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" name="client_tel" type='number' placeholder="请输入电话" value='{{client_tel}}' />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">出生日期</view>
          </view>
          <view class="weui-cell__bd">
            <picker mode="date" value="{{client_birthday}}" bindchange="bind_birthdayChange">
              <view class="weui-input" name="client_birth_day">{{client_birthday}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="weui-flex" style='margin: 20px 0px 10px 0px;'>
        <view class="weui-flex__item" style='margin: 0px 10px;'>
          <button form-type="submit" type='primary'>确定</button>
        </view>
      </view>
      <view class="weui-flex" style='margin: 10px 0px 10px 0px;'>
        <view class="weui-flex__item" style='margin: 0px 10px;'>
          <button bindtap='cancel_client' type='default'>取消</button>
        </view>
      </view>
      
      <view class="weui-flex" style='margin: 10px 0px 30px 0px;'>
        <view class="weui-flex__item" style='margin: 0px 10px;'>
          <button bindtap='remove_client' type='warn'>删除</button>
        </view>
      </view>
    </form>



  </view>
</view>